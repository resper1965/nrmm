# m.RMM Configuration
MRMM_DOMAIN=mrmm.yourdomain.com
POSTGRES_PASSWORD=your_secure_password_here
ACME_EMAIL=admin@yourdomain.com

# Security
SECRET_KEY=your_django_secret_key_here
DJANGO_DEBUG=False

# Database
POSTGRES_DB=mrmm
POSTGRES_USER=postgres

# External Integrations
NESSUS_API_KEY=your_nessus_api_key
ROCKET_CYBER_API_KEY=your_rocket_cyber_api_key
DATTO_API_KEY=your_datto_api_key
ACRONIS_API_KEY=your_acronis_api_key
VEEAM_API_KEY=your_veeam_api_key

# SIEM Integrations
AZURE_SENTINEL_WORKSPACE_ID=your_sentinel_workspace_id
AZURE_SENTINEL_SHARED_KEY=your_sentinel_shared_key
SPLUNK_API_URL=https://your-splunk-instance.com
SPLUNK_AUTH_TOKEN=your_splunk_token

# SMTP Configuration
EMAIL_HOST=smtp.yourdomain.com
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Backup Monitoring
BACKUP_CHECK_INTERVAL=3600  # seconds
VULNERABILITY_SCAN_INTERVAL=86400  # daily

# Compliance Settings
LGPD_ENABLED=True
ISO27001_ENABLED=True
COMPLIANCE_REPORT_EMAIL=compliance@yourdomain.com

# MeshCentral
MESH_SOFTWARE_NAME=m.RMM
MESH_COMPANY_NAME=Your Company Name

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# NATS
NATS_SERVER=nats://nats:4222

# 2FA Settings
TOTP_ISSUER_NAME=m.RMM